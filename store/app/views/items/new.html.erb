<h1>Item</h1>
<%= form_for :item, url: items_path do |f| %>
    <p>
      <%= f.label :item_name %><br>
      <%= f.text_field :item_name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', items_path %>